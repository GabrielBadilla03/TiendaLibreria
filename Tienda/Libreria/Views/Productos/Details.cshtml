@model Libreria.Models.Producto

@{
    ViewBag.Title = "Editar Producto";
}

<div id="edit-container" class="mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-center">
            <h2 class="card-title">Editar Producto</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row mb-3">
                    <label class="col-md-4 font-weight-bold text-right">Nombre:</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.NombreProducto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreProducto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 font-weight-bold text-right">Descripción:</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 font-weight-bold text-right">Imagen:</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.ImagenProducto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ImagenProducto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 font-weight-bold text-right">Descuento:</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Descuento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descuento, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 font-weight-bold text-right">Precio:</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 font-weight-bold text-right">Inventario Disponible:</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.DisponibilidadInventario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DisponibilidadInventario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 font-weight-bold text-right">Estado:</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 font-weight-bold text-right">Categoría:</label>
                    <div class="col-md-6">
                        @Html.DropDownList("CategoriaId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary ml-3">Volver</a>
                </div>
            }
        </div>
    </div>
</div>
